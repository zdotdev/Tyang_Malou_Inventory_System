<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<title>Redirecting...</title>
		<script>
			document.addEventListener('DOMContentLoaded', function () { // Save to localStorage
				localStorage.setItem('user_id', '{{ user_id }}');
				localStorage.setItem('username', '{{ username|e('js') }}');

				// Then redirect
				window.location.href = "{{ path('app_home') }}";
			});
		</script>
	</head>
	<body class="bg-gradient-to-r from-blue-50 to-indigo-50 font-sans min-h-screen flex items-center justify-center">
		<div class="bg-white p-8 rounded-xl shadow-xl transform transition-all hover:scale-105">
			<div class="flex items-center space-x-4 px-6">
				<p class="text-gray-700 text-lg font-medium tracking-wide">Logging you in, please wait...</p>
			</div>
		</div>
	</body>
</html>

