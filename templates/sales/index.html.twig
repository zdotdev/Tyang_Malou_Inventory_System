{% extends 'base.html.twig' %}

{% block title %}Sales index{% endblock %}

{% block body %}
    <h1>Sales index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Total_ammount</th>
                <th>Employee_name</th>
                <th>Date_created</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sale in sales %}
            <tr>
                <td>{{ sale.id }}</td>
                <td>{{ sale.totalAmmount }}</td>
                <td>{{ sale.employeeName }}</td>
                <td>{{ sale.dateCreated ? sale.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_sales_show', {'id': sale.id}) }}">show</a>
                    <a href="{{ path('app_sales_edit', {'id': sale.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sales_new') }}">Create new</a>
{% endblock %}
