{% extends 'base.html.twig' %}

{% block title %}Sales index
{% endblock %}

{% block body %}
	<nav class="bg-green-800 p-4">
		<div class="container mx-auto flex items-center justify-between">
			<div class="flex space-x-4">
				<a href={{ path('app_home') }} class="text-white hover:bg-green-700 px-3 py-2 rounded">
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
						<path stroke-linecap="round" stroke-linejoin="round" d="M9 15L3 9m0 0l6-6M3 9h12a6 6 0 010 12h-3"/>
					</svg>
				</a>
			</div>
			<div class="flex space-x-4">
				<a href="#" class="text-white hover:bg-green-700 px-3 py-2 rounded">
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
						<path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15M12 9l-3 3m0 0l3 3m-3-3h12.75"/>
					</svg>
				</a>
			</div>
		</div>
	</nav>

	<div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
		<div class="relative py-3 mx-auto w-full max-w-4xl">
			<div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20">
				<h1 class="text-3xl font-bold text-gray-900 mb-8">List of Sales</h1>

				<div class="overflow-x-auto">
					<table class="min-w-full divide-y divide-gray-200">
						<thead class="bg-gray-50">
							<tr>
								<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total Amount</th>
								<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Employee Name</th>
								<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date Created</th>
								<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
							</tr>
						</thead>
						<tbody class="bg-white divide-y divide-gray-200">
							{% for sale in sales %}
								<tr class="hover:bg-gray-50">
									<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ sale.totalAmmount }}</td>
									<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ sale.employeeName }}</td>
									<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ sale.dateCreated ? sale.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
									<td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
										<a href="{{ path('app_sales_show', {'id': sale.id}) }}" class="text-indigo-600 hover:text-indigo-900 mr-4">Show</a>
										<a href="{{ path('app_sales_edit', {'id': sale.id}) }}" class="text-indigo-600 hover:text-indigo-900">Edit</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="5" class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-center">No records found</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>

				<div class="mt-8">
					<a href="{{ path('app_sales_new') }}" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
						Create new
					</a>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
