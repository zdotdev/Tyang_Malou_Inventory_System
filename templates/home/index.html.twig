{% extends 'base.html.twig' %}

{% block title %}Home
{% endblock %}

{% block body %}

	<nav class="bg-green-800 p-4">
		<div class="container mx-auto flex items-center justify-between">
			<div class="flex space-x-4">
				{% if u == 'admin' %}
					<a href={{ path('app_employee_index') }} class="text-white hover:bg-green-700 px-3 py-2 rounded">Employee</a>
				{% endif %}
				<a href={{ path('app_supplier_index') }} class="text-white hover:bg-green-700 px-3 py-2 rounded">Supplier</a>
				<a href={{ path('app_sales_index') }} class="text-white hover:bg-green-700 px-3 py-2 rounded">Sales</a>
			</div>
			<div class="flex space-x-4">
				<a href={{ path('app_login') }} class="text-white hover:bg-green-700 px-3 py-2 rounded">
					<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
						<path stroke-linecap="round" stroke-linejoin="round" d="M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15M12 9l-3 3m0 0l3 3m-3-3h12.75"/>
					</svg>
				</a>
			</div>
		</div>
	</nav>

	<div class="container mx-auto px-4 py-8">
		<h1 class="text-3xl font-bold text-green-800 mb-6">List of Products</h1>

		<div class="overflow-x-auto shadow-md rounded-lg">
			<table class="min-w-full bg-white">
				<thead class="bg-green-800 text-white">
					<tr>
						<th class="py-3 px-4 text-left">Product Name</th>
						<th class="py-3 px-4 text-left">Category</th>
						<th class="py-3 px-4 text-left">Supplier</th>
						<th class="py-3 px-4 text-left">Cost Price</th>
						<th class="py-3 px-4 text-left">Selling Price</th>
						<th class="py-3 px-4 text-left">Unit Stock</th>
						<th class="py-3 px-4 text-left">Delivery Date</th>
						<th class="py-3 px-4 text-left">Actions</th>
					</tr>
				</thead>
				<tbody class="divide-y divide-gray-200">
					{% for product in products %}
						<tr class="hover:bg-gray-50">
							<td class="py-3 px-4">{{ product.productName }}</td>
							<td class="py-3 px-4">{{ product.category }}</td>
							<td class="py-3 px-4">{{ product.supplier }}</td>
							<td class="py-3 px-4">{{ product.costPrice }}</td>
							<td class="py-3 px-4">{{ product.sellingPrice }}</td>
							<td class="py-3 px-4">{{ product.unitStock }}</td>
							<td class="py-3 px-4">{{ product.deliveryDate }}</td>
							<td class="py-3 px-4">
								<a href="{{ path('app_product_show', {'id': product.id}) }}" class="text-blue-600 hover:text-blue-800 mr-2">Show</a>
								<a href="{{ path('app_product_edit', {'id': product.id}) }}" class="text-green-600 hover:text-green-800">Edit</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="9" class="py-3 px-4 text-center text-gray-500">No records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>

		<div class="mt-6">
			<a href="{{ path('app_product_new') }}" class="bg-green-800 text-white px-4 py-2 rounded hover:bg-green-700 transition-colors">Create New Product</a>
		</div>
	</div>


{% endblock %}
